@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <h2>Yorumsuz...</h2>
    }
    else
    {
        @foreach (var item in Model)
        {


            <div class="media">
                <img src="@item.CommentImage" alt="" class="img-fluid" style="width:80px; height: 80px" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
    </div>

